ARG PYTHON_BASE_IMAGE
FROM $PYTHON_BASE_IMAGE

ARG COMMIT=master

VOLUME /logs

WORKDIR /base

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        git \
        locales && \
    printf '%s\n%s\n' 'en_US.UTF-8 UTF-8' 'ru_RU.UTF-8 UTF-8' >> /etc/locale.gen && \
    locale-gen && \
    apt-get purge -y --auto-remove -o APT::AutoRemove::RecommendsImportant=false && \
	rm -rf /var/lib/apt/lists/* && \
	pip install virtualenv==16.7.5 && \
	virtualenv venv && \
	mkdir -p /venv/dp_internal_token_dir && \
    rm -rf /root/.cache

ENV PATH=/base/venv/bin:$PATH
ENV LANG='en_US.UTF-8' LANGUAGE='en_US.UTF-8' LC_ALL='en_US.UTF-8'

RUN git clone https://github.com/deepmipt/DeepPavlov.git && \
    cd DeepPavlov && \
    git checkout $COMMIT && \
    python setup.py develop && \
    python -c 'import deeppavlov.models' && \
    rm -rf /root/.cache


ARG SKILL_CONFIG
ARG SKILL_PORT

ENV CONFIG=$SKILL_CONFIG
ENV PORT=$SKILL_PORT
ENV TFHUB_CACHE_DIR=/tmp/tfhub

VOLUME /tmp/tfhub

WORKDIR dp-agent

COPY . /base/dp-agent

RUN python -m deeppavlov install $CONFIG

CMD python -m deeppavlov riseapi $CONFIG -p $PORT -d